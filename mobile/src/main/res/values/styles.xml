<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="colorPrimary">@color/nexus6_dark</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#101015</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/ra_link_color</item>
        <item name="android:windowBackground">@color/ActionBar_alt</item>
        </style>

    <!--Use this theme for individual API level customizations -->
    <style name="AppIntermediateTheme" parent="AppBaseTheme">

    </style>

    <!-- <item name="android:listViewStyle">@style/MyListViewStyle</item> -->
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppIntermediateTheme">

        <item name="android:textColor">@color/text_color</item>

        <item name="android:dropDownListViewStyle">@style/PopupMenu</item>
        <item name="dropDownListViewStyle">@style/PopupMenu</item>
    </style>

    <style name="MyListViewStyle" parent="@android:style/Widget.ListView">

        <item name="android:divider">@color/list_divider_color</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:listSelector">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:textColor">#000000</item>
        <item name="android:paddingRight">11dip</item>
    </style>


    <style name="spinner" parent="Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:textStyle">bold</item>
        <!--<item name="android:popupBackground">@color/translucent_dim_gray</item>-->
    </style>


    <!-- Overflow menu and Spinners-->
    <style name="PopupMenu" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:background">@color/side_menu</item>
        <item name="android:divider">@color/ra_link_color</item>
        <item name="android:dividerHeight">1dp</item>
    </style>



</resources>
