<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="colorPrimary">@color/ActionBar_actual</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@android:color/black</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/ra_link_color</item>
        <item name="android:windowBackground">@color/ActionBar_alt</item>
    </style>

    <!-- <item name="android:listViewStyle">@style/MyListViewStyle</item> -->
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>-->
        <item name="android:textColor">@color/text_color</item>

        <!--<item name="android:popupMenuStyle">@style/PopupMenu</item>-->
    </style>
    <style name="MyListViewStyle" parent="@android:style/Widget.ListView">

<item name="android:divider">@color/list_divider_color</item>
<item name="android:dividerHeight">1px</item>
<item name="android:listSelector">?android:attr/selectableItemBackground</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/ActionBar_actual</item>
    </style>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

       <!--  <item name="android:textColor">@color/text_color</item>
    </style> -->

    <style name="AlertDialogCustom" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:textColor">#000000</item>
        <item name="android:paddingRight">11dip</item>
    </style>

    <style name="spinner" parent="Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:textStyle">bold</item>
        <!--<item name="android:popupBackground">@color/translucent_dim_gray</item>-->
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
    <item name="android:popupBackground">@color/translucent_dim_gray</item>
</style>



</resources>
