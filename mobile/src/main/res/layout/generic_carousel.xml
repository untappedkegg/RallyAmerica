<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

	<FrameLayout android:id="@+id/generic_carousel_frame"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1" >

	    <ProgressBar android:id="@+id/generic_carousel_progress"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleLarge"
	        android:layout_gravity="center" />

	    <com.keggemeyer.rallyamerica.ui.view.CarouselViewPager
            android:id="@+id/generic_carousel_pager"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />

	</FrameLayout>

    <!-- <com.ra.ui.view.ViewPagerDots
