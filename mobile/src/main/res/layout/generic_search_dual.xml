<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <RelativeLayout android:id="@+id/search_dual_bar"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" >
        
        <View android:id="@+id/strut"
	        android:layout_width="0dp"
	        android:layout_height="0dp" 
	        android:layout_centerHorizontal="true" />
		<EditText android:id="@+id/search_dual_text1"
		    android:layout_width="fill_parent"
		    android:layout_height="45dip"
		    android:layout_marginLeft="3dip"
		    android:layout_marginTop="7dip"
        	android:layout_alignParentLeft="true"
		    android:layout_alignRight="@id/strut"
		    android:imeOptions="actionSearch"
		    android:lines="1"
		    android:maxLines="1"
		    android:singleLine="true" />
		<EditText android:id="@+id/search_dual_text2"
		    android:layout_width="fill_parent"
		    android:layout_height="45dip"
		    android:layout_marginRight="3dip"
		    android:layout_marginLeft="3dip"
		    android:layout_marginTop="7dip"
	        android:layout_alignParentRight="true"
	        android:layout_alignLeft="@id/strut"
		    android:imeOptions="actionSearch"
		    android:lines="1"
		    android:maxLines="1"
		    android:singleLine="true"
		    android:paddingRight="40dip" />
		<ImageButton android:id="@+id/search_dual_button"
		    android:layout_width="40dip"
		    android:layout_height="40dip"
		    android:layout_marginRight="1dip"
		    android:layout_marginTop="7dip"
		    android:layout_alignRight="@id/search_dual_text2"
		    android:background="@drawable/search"
		    android:scaleType="fitCenter" />
		
	</RelativeLayout>
	
    <ListView android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_dual_bar" />
	<TextView android:id = "@android:id/empty"
		android:layout_width = "fill_parent"
		android:layout_height = "wrap_content" />
    <ProgressBar
        android:id="@+id/search_dual_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp" />

</RelativeLayout>