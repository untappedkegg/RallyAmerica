<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ActionBar"
    tools:context=".feedback.Feedback" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02" >

         <TextView
             android:id="@+id/limit_string"
             android:layout_width="110dp"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
             android:ems="12"
             android:textColor="@color/text_color"
             android:text="Character Count: " />
         
        <TextView
            android:id="@+id/TextCounter"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/limit_string"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_color"
            android:ems="12"
            android:text="0" >

            
        </TextView>

        <TextView
            android:id="@+id/FeedbackLimit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/limit_string"
            android:layout_centerVertical="true"
            android:ems="10"
            android:text="" />

    </RelativeLayout>

    <EditText
        android:id="@+id/fb_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="30dip"
        android:layout_marginBottom="50dp"
        android:layout_weight="0.96"
        android:inputType="textCapSentences|textMultiLine"
        android:gravity="left"
        android:textColor="@android:color/widget_edittext_dark"
        android:hint="@string/fb_hint"
        android:background="@color/LightGrey"
        android:singleLine="false" />

    <Button
        android:id="@+id/fb_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dip"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:clickable="true"
        android:layout_weight="0.02"
        android:textColor="@color/text_color"
        android:text="@string/fb_button" />

</LinearLayout>