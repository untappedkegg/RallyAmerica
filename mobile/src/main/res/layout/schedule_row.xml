<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal" >

   		<ImageView android:id="@+id/sched_icon"
     	  	 android:layout_width="wrap_content"
     	  	 android:layout_height="wrap_content"
            android:maxWidth="75dp"
     	  	 android:scaleType="fitCenter"
     	  	 android:layout_gravity="center_horizontal|center_vertical"
     	  	 android:contentDescription="@string/icon" />

   	 	<TextView android:id="@+id/sched_title"
    	    android:layout_width="0dp"
    	    android:layout_height="wrap_content"
    	    android:layout_weight="1"
    	    android:layout_gravity="center_vertical"
    	    android:textSize="18sp"
    	    android:padding="3dp"
    	    android:layout_marginRight="5dp"
    	    android:textColor="@color/title_color"/>

    	<TextView android:id="@+id/sched_id"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:visibility="gone" />

    	<ImageView android:id="@+id/sched_menu_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/ic_action_overflow"
	    android:clickable="true"
        android:layout_gravity="center"
        android:padding="15dp"
	    android:contentDescription="@string/menu"/>
    </LinearLayout>




        <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

             <TextView android:id="@+id/sched_date"
     	   android:layout_width="wrap_content"
     	   android:layout_height="wrap_content"
     	   android:layout_alignParentLeft="true"
     	   android:layout_marginRight="3dp"
    	   android:layout_marginLeft="5dp"
     	   android:visibility="visible" />


        <TextView android:id="@+id/sched_status"
     	   android:layout_width="wrap_content"
     	   android:layout_height="wrap_content"
     	   android:layout_marginRight="10dp"
     	   android:textColor="@color/light_green"
     	   android:layout_alignParentRight="true"
     	   android:visibility="visible" />


        </RelativeLayout>

        <TextView android:id="@+id/sched_event_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView android:id="@+id/sched_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView android:id="@+id/sched_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView android:id="@+id/sched_website"
     	   android:layout_width="wrap_content"
     	   android:layout_height="wrap_content"
     	   android:visibility="gone" />

		<TextView android:id="@+id/sched_location"
     	   android:layout_width="wrap_content"
     	   android:layout_height="wrap_content"
     	   android:visibility="gone" />


</LinearLayout>
